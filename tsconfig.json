{
  "compilerOptions": {
    "lib": ["ES2022"],
    "target": "ES2022",
    "module": "commonjs",
    "moduleDetection": "force",
    "sourceMap": true,
    "outDir": "./dist",
    "rootDir": "./lib",

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "verbatimModuleSyntax": true,
    "noEmit": true,

    /* Linting */
    "skipLibCheck": true,
    "strict": true,
    "noFallthroughCasesInSwitch": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["lib/**/*.ts"],
  "exclude": ["test/**/*.test.ts"]
}
